<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addTask">

    <TextView
        android:id="@+id/namaTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:text="Judul Tugas"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txNamaTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaTugas"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Title Mission"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/descTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txNamaTugas"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:text="Deskripsi Tugas"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txDescTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descTugas"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Description Mission"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tanggalTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txDescTugas"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:text="Tanggal"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/Tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tanggalTugas"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:hint="DD/MMM/YYYY"
            android:textSize="18sp" />

        <Button
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="Set Date" />
    </LinearLayout>

    <Button
        android:id="@+id/submitData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tanggal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="SUBMIT" />

</RelativeLayout>