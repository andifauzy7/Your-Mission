<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTask">

    <TextView
        android:id="@+id/namaTugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/namaTugas" />

    <TextView
        android:id="@+id/descTugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaTugas"
        android:text="@string/descTugas" />

    <TextView
        android:id="@+id/deadlineTugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descTugas"
        android:text="TextView" />
</RelativeLayout>